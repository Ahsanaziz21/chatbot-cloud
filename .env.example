# Environment Configuration Template
# Copy to .env and fill in your values

# ===== SERVER CONFIGURATION =====
PORT=3000
NODE_ENV=development
DEBUG=true

# ===== CLIENT CONFIGURATION =====
CLIENT_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# ===== DATABASE CONFIGURATION =====
# Local MongoDB
DATABASE_URL=mongodb://localhost:27017/chatbot

# Or use MongoDB Atlas (Cloud)
# DATABASE_URL=mongodb+srv://username:password@cluster-name.mongodb.net/chatbot?retryWrites=true&w=majority

# Database Credentials
DB_USERNAME=admin
DB_PASSWORD=password123
DB_HOST=mongodb
DB_PORT=27017
DB_NAME=chatbot

# ===== AUTHENTICATION & SECURITY =====
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# ===== AWS CONFIGURATION =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_DYNAMODB_TABLE=chatbot-sessions

# ===== EXTERNAL SERVICES =====
# OpenAI API (for advanced NLP)
OPENAI_API_KEY=sk-your_openai_api_key

# Google Cloud (if using)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_API_KEY=your_google_api_key

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your_slack_token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ===== LOGGING & MONITORING =====
LOG_LEVEL=info
# LOG_LEVEL options: error, warn, info, debug, trace

# Sentry (Error tracking)
SENTRY_DSN=https://your_sentry_dsn

# CloudWatch
CLOUDWATCH_NAMESPACE=ChatbotSystem
CLOUDWATCH_REGION=us-east-1

# ===== MAIL CONFIGURATION =====
MAIL_SERVICE=gmail
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@chatbotsystem.com

# ===== SESSION CONFIGURATION =====
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com
ALLOW_CREDENTIALS=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window

# ===== CACHE CONFIGURATION =====
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # 1 hour in seconds

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv

# ===== FEATURE FLAGS =====
ENABLE_USER_AUTHENTICATION=true
ENABLE_MESSAGE_HISTORY=true
ENABLE_ANALYTICS=true
ENABLE_ADVANCED_NLP=false
ENABLE_VOICE_INPUT=false
ENABLE_EMAIL_NOTIFICATIONS=false

# ===== THIRD-PARTY INTEGRATIONS =====
# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===== DEVELOPMENT TOOLS =====
# Enable hot reload in development
HOT_RELOAD=true
MOCK_DATA=false  # Use mock data for testing

# ===== DOCKER CONFIGURATION =====
DOCKER_ENV=development
DOCKER_REGISTRY=your_docker_registry
DOCKER_IMAGE_TAG=latest

# ===== PRODUCTION SETTINGS =====
PRODUCTION_DOMAIN=yourdomain.com
PRODUCTION_PROTOCOL=https
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# ===== BACKUP & RECOVERY =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30

# ===== SECURITY HEADERS =====
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true

# ===== CUSTOM SETTINGS =====
# Add your custom environment variables here
COMPANY_NAME=Your Company
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@yourdomain.com
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
